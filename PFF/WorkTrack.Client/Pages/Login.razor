@page "/login"
@inject IAuthService Auth
@inject NavigationManager Nav

<h3>Connexion</h3>

<EditForm Model="_vm" OnValidSubmit="Submit">
    <div class="mb-2">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="_vm.Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Mot de passe</label>
        <InputText class="form-control" type="password" @bind-Value="_vm.Password" />
    </div>
    <button type="submit" class="btn btn-primary" disabled="@_busy">Se connecter</button>
    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="text-danger mt-2">@_error</div>
    }
</EditForm>

@code {
    private bool _busy;
    private string? _error;
    private Vm _vm = new();

    class Vm { public string Email { get; set; } = ""; public string Password { get; set; } = ""; }

    private async Task Submit()
    {
        _busy = true; _error = null;
        var ok = await Auth.LoginAsync(_vm.Email, _vm.Password);
        _busy = false;

        if (ok) Nav.NavigateTo("/seances");
        else _error = "Identifiants invalides.";
    }
}
