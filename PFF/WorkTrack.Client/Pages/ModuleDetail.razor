@page "/modules/{Id:guid}"
@using WorkTrack.Client.Models
@inject IModulesService ModulesService
@inject NavigationManager Nav
@inject IJSRuntime JS

@if (_loading)
{
    <p class="text-center">Chargement des informations...</p>
}
else if (_notFound)
{
    <div class="alert alert-warning text-center">Module introuvable.</div>
}
else
{
    <div class="details-container">
        <div class="details-header">
            <h2>üìò D√©tails du Module</h2>
        </div>
        <div class="details-info">
            <p><strong>Code :</strong> @_module.Code</p>
            <p><strong>Nom :</strong> @_module.Nom</p>
            <p><strong>Coefficient :</strong> @(_module.Coefficient?.ToString() ?? "-")</p>
            <p><strong>ECTS :</strong> @(_module.Ects?.ToString() ?? "-")</p>
        </div>
        <button class="btn-retour" @onclick="Retour">‚¨ÖÔ∏è Retour √† la liste</button>
    </div>
}

@code {
    [Parameter] public Guid Id { get; set; }

    private ModuleDto _module = new();
    private bool _loading = true;
    private bool _notFound = false;

    protected override async Task OnInitializedAsync()
    {
        var module = await ModulesService.GetByIdAsync(Id);
        if (module == null)
        {
            _notFound = true;
            return;
        }

        _module = module;
        _loading = false;
    }

    private void Retour() => Nav.NavigateTo("/modules");
}

